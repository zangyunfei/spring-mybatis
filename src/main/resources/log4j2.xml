<?xml version="1.0" encoding="UTF-8"?>
<Configuration monitorInterval="180" packages="cn.youcredit.common.log">
	<properties>
		<property name="LOG_HOME">d:/logs</property>
		<property name="PATTERN">%-5level^|%d{ISO8601}^|thread^|%loginfo%n
		</property>
		<property name="CONSOLE_PATTERN">%d{HH:mm:ss,SSS} %-5level [%class.%method]
			(%t) %msg%n
		</property>
	</properties>
	<Appenders>
		<Console name="Console" target="SYSTEM_OUT">
			<PatternLayout pattern="${CONSOLE_PATTERN}" />
		</Console>
		<!--info.log -->
		<!-- When bufferedIO is true, this is the buffer size, the default is 8192 
			bytes. -->
		<RollingFile name="InfoRollingFile" fileName="${LOG_HOME}/info.log"
			filePattern="${LOG_HOME}/info.log.%d{yyyy-MM-dd}" append="true"
			bufferedIO="true">
			<PatternLayout pattern="${PATTERN}" />
			<Filters>
				<Filters>
					<ThresholdFilter level="error" onMatch="DENY"
						onMismatch="NEUTRAL" />
					<ThresholdFilter level="warn" onMatch="DENY"
						onMismatch="NEUTRAL" />
					<ThresholdFilter level="info" onMatch="ACCEPT"
						onMismatch="DENY" />
				</Filters>
			</Filters>
			<Policies>
				<TimeBasedTriggeringPolicy interval="1"
					modulate="true" />
			</Policies>
		</RollingFile>
		<!--warn.log -->
		<RollingFile name="WarnRollingFile" fileName="${LOG_HOME}/warn.log"
			filePattern="${LOG_HOME}/warn.log.%d{yyyy-MM-dd}" append="true"
			bufferedIO="true">
			<PatternLayout pattern="${PATTERN}" />
			<Filters>
				<ThresholdFilter level="error" onMatch="DENY"
					onMismatch="NEUTRAL" />
				<ThresholdFilter level="warn" onMatch="ACCEPT"
					onMismatch="DENY" />
			</Filters>
			<Policies>
				<TimeBasedTriggeringPolicy interval="1"
					modulate="true" />
			</Policies>
		</RollingFile>
		<!--error.log -->
		<RollingFile name="ErrorRollingFile" fileName="${LOG_HOME}/error.log"
			filePattern="${LOG_HOME}/error.log.%d{yyyy-MM-dd}" append="true"
			bufferedIO="true">
			<PatternLayout pattern="${PATTERN}" />
			<Filters>
				<ThresholdFilter level="ERROR" onMatch="ACCEPT"
					onMismatch="DENY" />
			</Filters>
			<Policies>
				<TimeBasedTriggeringPolicy interval="1"
					modulate="true" />
			</Policies>
		</RollingFile>
		<!--异步appender -->
		<Async name="asyncAppender" includeLocation="true">
			<AppenderRef ref="ErrorRollingFile" />
			<AppenderRef ref="WarnRollingFile" />
			<AppenderRef ref="InfoRollingFile" />
		</Async>

		<!-- 警告日志 appender -->
		<!--<Async name="WarnAsyncAppender" includeLocation="true"> <AppenderRef 
			ref="WarnRollingFile" /> </Async> -->
	</Appenders>
	<Loggers>
		<!--OFF 0 -->
		<!--FATAL 100 -->
		<!--ERROR 200 -->
		<!--WARN 300 -->
		<!--INFO 400 -->
		<!--DEBUG 500 -->
		<!--TRACE 600 -->
		<!--ALL Integer.MAX_VALUE -->
		<Root level="INFO" includeLocation="true">
			<AppenderRef ref="asyncAppender" />
			<AppenderRef ref="Console" />
		</Root>
	</Loggers>
</Configuration>
